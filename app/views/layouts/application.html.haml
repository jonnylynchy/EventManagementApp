!!!
%html
  %head
    %title Lightpost Events
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %link{:rel=>'stylesheet', :href=>'http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800', :type => "text/css"} 
    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
  %body
    = render partial: 'shared/navigation'
    .container
      .row
        .twelve.columns
          = render partial: 'shared/messages'
          %h3.header
            = "#{@page_title}" if @page_title
        - if (request.fullpath == '/contact' || request.fullpath == '/about' || request.fullpath == '/')
          .eight.columns
            = yield
          .four.columns
            = render partial: 'shared/static_sidebar'
        - else
          .three.columns
            = render partial: 'shared/signup_sidebar'
          .nine.columns
            = yield
    #footer
      .row
        .four.columns
          &copy; 
          = "#{Time.new.year}"
          Flux Interactive LLC 
        .eight.columns
          %ul.link-list.right
            %li
              = link_to 'home', root_path
            %li
              = link_to 'about', about_path
            %li
              = link_to 'contact', contact_path